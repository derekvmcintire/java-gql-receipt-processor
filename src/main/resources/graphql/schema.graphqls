type Query {
  getReceipt(id: ID!): Receipt
  listReceipts: [Receipt]
}

type Mutation {
  addReceipt(input: AddReceiptInput!): Receipt
}

type Receipt {
  id: ID!
  store: String!
  date: String!
  total: Float!
  items: [Item!]!
}

type Item {
  id: ID!
  name: String!
  quantity: Int!
  price: Float!
}

input AddReceiptInput {
  store: String!
  date: String!
  total: Float!
  items: [AddItemInput!]!
}

input AddItemInput {
  name: String!
  quantity: Int!
  price: Float!
}
